<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason*:"
        android:id="@+id/txtRejectReason" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/editRejectReason"
        android:lines="4"
        android:minLines="4"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:layout_below="@+id/txtRejectReason"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editRejectReason"
        android:id="@+id/btnRejectLeave"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editRejectReason"
        android:id="@+id/btnRejectLeaveCancel" />

</RelativeLayout>