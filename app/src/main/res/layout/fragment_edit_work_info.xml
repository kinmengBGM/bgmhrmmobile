<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hrm.com.profile.EditWorkInfo">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_content_frame">


            <TextView
                android:id="@+id/employeeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Number: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editEmployeeNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/editGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gradeItems" />


            <TextView
                android:id="@+id/employeeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Type: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/editEmployeeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/empTypeItems" />

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/editDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/departmentItems" />

            <TextView
                android:id="@+id/joinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Date: "
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <RelativeLayout
                android:id="@+id/rowJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_textbox_bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editJoinDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:paddingLeft="@dimen/padding_textbox_icon"/>

                <ImageView
                    android:id="@+id/calendar1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_calendar" />

            </RelativeLayout>
            <TextView
                android:id="@+id/resDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resignation Date: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <RelativeLayout
                android:id="@+id/rowResDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_textbox_bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editResDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:paddingLeft="@dimen/padding_textbox_icon"/>

                <ImageView
                    android:id="@+id/calendar2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_calendar" />

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</FrameLayout>
