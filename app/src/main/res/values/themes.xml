<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!--Navigation drawer-->
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>

        <item name="android:editTextStyle">@style/MyEditText</item>

        <item name="android:spinnerStyle">@style/MySpinner</item>
        <!--Spinner drop down item-->
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItemStyle</item>
        <!--Spinner main item-->
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>

        <item name="android:listViewStyle">@style/MyListViewStyle</item>
        <item name="android:expandableListViewStyle">@style/MyListViewStyle</item>

        <item name="android:listViewWhiteStyle">@style/MySpinnerDropDownItemStyle</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:dialogTheme">@style/MyDialogStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <item name="android:textAppearanceListItem">@style/TextAppearanceListView</item>
        <!--Support library compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">monospace</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ab_bg_orange</item>
        <item name="android:backgroundStacked">@color/ab_stacked</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextAppearance</item>

        <!--Support library compatibility-->
        <item name="background">@color/ab_bg_orange</item>
        <item name="backgroundStacked">@color/ab_stacked</item>
        <item name="titleTextStyle">@style/MyActionBarTextAppearance</item>

    </style>

    <style name="MyActionBarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeHeader">
        <item name="android:background">@color/base_orange</item>
    </style>

    <style name="HomeHeaderText">
        <item name="android:textColor">@color/text_homeHeader</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">@dimen/padding_home_header</item>
    </style>

    <style name="HomeHeaderButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textSize">13sp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColorHint">@color/text_edittext</item>
        <item name="android:textColor">@color/text_edittext</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:spinnerMode">dropdown</item>
        <!--
        <item name="android:popupBackground">@drawable/spinner</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>-->
    </style>

    <style name="MySpinnerItemStyle">
        <item name="android:textAppearance">@style/MyEditText</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>
    </style>

    <style name="MySpinnerDropDownItemStyle">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:textAppearance">@style/MyEditText</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>
    </style>

    <style name="MyPagerTabStrip">
        <item name="android:background">@drawable/viewpager</item>
    </style>


    <style name="MyPagerTabStripText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDatePickerStyle" parent="android:Widget.DatePicker">
        <item name="android:headerBackground">@color/ab_bg_orange</item>
        <item name="android:textColor">@color/ab_bg_orange</item>
        <item name="android:background">@color/ab_bg_orange</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Dialog"><!--
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:headerBackground">#ffffff</item>-->
    </style>

    <style name="ContainerStyle">
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginBottom">@dimen/margin_content_frame</item>

    </style>

    <style name="editProfileButtonStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textSize">10dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="MyListViewStyle">
        <item name="android:textAppearanceListItem">@style/TextAppearanceListView</item>
        <item name="android:childDivider">#ffffff</item>
        <item name="android:divider">@color/base_grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearanceListView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="SwipeView">
        <item name="android:textAppearance">@style/swipeTextStyle</item>
    </style>

    <style name="swipeTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>
</resources>