<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabTitle</item>
        <item name="android:editTextStyle">@style/MyEditText</item>
        <item name="android:spinnerStyle">@style/MySpinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerText</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:dialogTheme">@style/MyDialogStyle</item>
        <item name="android:expandableListViewStyle">@style/MyListViewStyle</item>
        <!--Support library compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyTabTitle</item>

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ab_bg_orange</item>
        <item name="android:backgroundStacked">@color/ab_stacked</item>

        <!--Support library compatibility-->
        <item name="background">@color/ab_bg_orange</item>
        <item name="backgroundStacked">@color/ab_stacked</item>

    </style>

    <style name="MyTabTitle" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textSize">13dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>
    </style>

    <style name="SpinnerText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">@dimen/padding_textbox</item>
        <item name="android:paddingRight">@dimen/padding_textbox</item>
    </style>


    <style name="MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="MyPagerTabStrip">
        <item name="android:background">@drawable/viewpager</item>
    </style>


    <style name="MyPagerTabStripText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDatePickerStyle" parent="android:Widget.DatePicker">
        <item name="android:headerBackground">@color/ab_bg_orange</item>
        <item name="android:textColor">@color/ab_bg_orange</item>
        <item name="android:background">@color/ab_bg_orange</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Dialog"><!--
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:headerBackground">#ffffff</item>-->
    </style>

    <style name="profileContainerStyle">
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingBottom">@dimen/padding_textbox</item>
        <item name="android:layout_marginLeft">@dimen/margin_content_frame</item>
        <item name="android:layout_marginRight">@dimen/margin_content_frame</item>
        <item name="android:layout_marginBottom">@dimen/margin_content_frame</item>

    </style>

    <style name="editProfileButtonStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textSize">10dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="MyListViewStyle">
        <item name="android:background">#000000</item>
    </style>
</resources>